<?xml version="1.0"?>
<odoo><data>

<record id="estate_model_action" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">tree,form</field>
   
</record>


 <record id="estate_search_view" model="ir.ui.view">
    <field name="name">estate_search_view</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
         <search>
                <field name="name"/>
                <field name="description"/>
                <field name="expected_price"/>
                <field name="garden_orientation"/>
        </search>
    </field>
</record>


<record id="estate_tree_view" model="ir.ui.view">
    <field name="name">estate_tree_view</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <tree>
        <field name="id"/>
        <field name="name"/>
        <field name="description"/>
        <field name="expected_price"/>
        <field name="garden_orientation"/>
       
      </tree>
    </field>
</record>

<record id="estate_form_view" model="ir.ui.view">
    <field name="name">estate_form_view</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">


    <form string="My Property">
    <sheet>
    <h1>My Property</h1>
    <group>

              <group>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="date_availability"/>
              </group>

              <group>
                <field name="expected_price"/>
                <field name="living_area"/>
              </group>

              <notebook>
                      <page name="Description">
                            <group>
                                      <field name="description" />
                                      <field name="bedrooms"/>
                                      <field name="living_area"/>
                                      <field name="factory_size"/>
                                      <field name="garage"/>
                                      <field name="garden"/>
                                      <field name="garder_area"/>
                                      <field name="garden_orientation" />
                              </group>
                      </page>

                      <page name="Other Info">
                            <group>
                                      <field name="description" />
                              </group>
                      </page>

              </notebook>

    </group>
    </sheet>
    </form>

    
   
    </field>
</record>

</data></odoo>